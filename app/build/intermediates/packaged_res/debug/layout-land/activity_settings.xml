<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508">

        <LinearLayout
            android:id="@+id/WorkSessionLayout"
            style="@style/lndTimerSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/txtWorkMin"
                style="@style/lndTxtSetting"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="25" />

            <TextView
                android:id="@+id/txtWorkTitle"
                style="@style/lndTxtTitleSetting"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="@string/workSessionTitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ShortBreakLayout"
            style="@style/lndTimerSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/txtShortMin"
                style="@style/lndTxtSetting"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="5" />

            <TextView
                android:id="@+id/txtShortTitle"
                style="@style/lndTxtTitleSetting"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="@string/shrtBreakTitle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LongBreakLayout"
            style="@style/lndTimerSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center">


            <TextView
                android:id="@+id/txtLongMin"
                style="@style/lndTxtSetting"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="15"

                />

            <TextView
                android:id="@+id/txtLongTitle"
                style="@style/lndTxtTitleSetting"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:text="@string/lngBreakTitle" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="440dp"
        android:layout_height="230dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/outline_bg"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnColor1"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btnColor2"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btnColor3"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btnColor4"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_yellow"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="#020202" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnColor5"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pink"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor6"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_pink"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor7"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btnColor8"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_blue"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnColor9"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor10"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/beige"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor11"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_red"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor12"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/amaranth"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnColor13"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/yellow"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor14"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/pastel_green"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnColor15"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btnColor16"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/navy_blue"
                app:cornerRadius="5dp"
                app:icon="@null"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>