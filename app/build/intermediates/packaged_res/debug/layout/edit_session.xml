<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textAlignment="center">

    <EditText
        android:id="@+id/etTimeInput"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/rubik_mono_one"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDecrease"
        app:layout_constraintEnd_toStartOf="@+id/btnIncrease"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnDecrease"
        app:layout_constraintTop_toTopOf="@+id/btnDecrease" />

    <Button
        android:id="@+id/btnIncrease"
        style="@style/btnEditTimer"
        android:layout_marginEnd="24dp"
        app:icon="@drawable/baseline_add_24"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/etTimeInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etTimeInput"
        app:layout_constraintTop_toTopOf="@+id/etTimeInput" />

    <Button
        android:id="@+id/btnDecrease"
        style="@style/btnEditTimer"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        app:icon="@drawable/baseline_remove_24"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etTimeInput"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeCat" />

    <TextView
        android:id="@+id/tvTimeCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/belgrano"
        android:text="@string/workSessionTitle"
        android:textColor="@color/secondary"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>