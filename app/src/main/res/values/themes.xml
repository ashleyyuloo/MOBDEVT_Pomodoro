<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pomodoro" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="actionBarStyle">@style/Actionbar.dark</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <style name="Theme.Pomodoro" parent="Base.Theme.Pomodoro"/>

    <style name="ActivityBG">
        <item name="android:background">@color/primaryVariant</item>
    </style>

    <style name="EditSessionBG">
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Actionbar.dark" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="background">@color/secondary</item>
        <item name="titleTextStyle">@style/Actionbar.darktext</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Actionbar.darktext" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="btnTimer">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">11dp</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>

    <style name="txtTimer">
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtTask">
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btnClear">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">11dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>

    <style name="btnTask">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">262dp</item>
        <item name="android:width">180dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">11dp</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="iconTint">@color/primaryVariant</item>
        <item name="iconSize">26dp</item>
    </style>

    <style name="taskList">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:hint">@string/hintTask</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DeleteBtn">
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/primaryVariant</item>
    </style>

    <style name="timerSetting">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/outline_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtSetting">
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtTitleSetting">
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtColorTitleSetting">
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="txtEditTitleSetting">
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="txtEditTimer">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="btnEditTimer">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:buttonCornerRadius">100dp</item>
        <item name="android:backgroundTint">@color/primaryVariant</item>
        <item name="android:iconTint">@color/white</item>

    </style>

    <style name="checkbox" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlActivated">@color/white</item>
    </style>

<!--    Landscape-->
    <style name="lndBtnTimer">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>

    <style name="lndTxtTimer">
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>