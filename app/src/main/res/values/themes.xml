<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pomodoro" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="actionBarStyle">@style/Actionbar.dark</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <style name="Theme.Pomodoro" parent="Base.Theme.Pomodoro"/>
    <style name="ActivityBG">
        <item name="android:background">@color/primaryVariant</item>
    </style>

    <style name="Actionbar.dark" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="background">@color/secondary</item>
        <item name="titleTextStyle">@style/Actionbar.darktext</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Actionbar.darktext" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="btnTimer">
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">11dp</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>

    <style name="txtTimer">
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnClear">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">11dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/belgrano</item>
    </style>

    <style name="btnTask">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">262dp</item>
        <item name="android:width">180dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint"> @color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">11dp</item>
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="iconTint">@color/primaryVariant</item>
    </style>

    <style name="DeleteBtn">
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/primaryVariant</item>
    </style>

    <style name="timerSetting">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/outline_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtSetting">
        <item name="android:fontFamily">@font/rubik_mono_one</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtTitleSetting">
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txtColorTitleSetting">
        <item name="android:fontFamily">@font/belgrano</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>