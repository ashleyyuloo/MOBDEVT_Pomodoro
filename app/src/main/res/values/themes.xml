<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pomodoro" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="actionBarStyle">@style/Actionbar.dark</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
    </style>

    <style name="Theme.Pomodoro" parent="Base.Theme.Pomodoro" />

    <style name="Actionbar.dark" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/Actionbar.darktext</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Actionbar.darktext" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="btnTimer">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:backgroundTint"> @color/secondary</item>
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="btnClear">
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint"> @color/secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btnTask">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">262dp</item>
        <item name="android:width">180dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint"> @color/secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">14dp</item>
    </style>

</resources>